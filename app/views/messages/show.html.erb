<!DOCTYPE html>
<html>
<head>
  <title>News</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  
  <meta property="og:title" content="TWHN" />
  <meta property="og:type" content="article" />
  <meta property="og:url" content="<%= url %>" />
  <meta property="og:site_name" content="TW Hacker News" />
  <meta property="fb:admins" content="100000068191335" />
  <meta property="fb:admins" content="100000068191335"/>

  
</head>
<body>
<%= url %>

<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @message.title %>
</p>

<p>
	<b>Url:</b>
  <a href="<%= @message.url %>"><%= @message.url %></a>
</p>

<p>
	<b>Content:</b>
  <%= @message.content %>
</p>

<% if @message.user == current_user %>
	<%= link_to 'Edit', edit_message_path(@message) %> |
<% end %>
<%= link_to 'Back', messages_path %>

<% tmp = "http://twhackernews.heroku.com/messages/" + @message.id.to_s %>

<div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#appId=180567541999127&amp;xfbml=1"></script><fb:like href="<%= tmp %>" send="false" width="450" show_faces="false" font=""></fb:like>


<div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:comments href="<%= tmp %>" num_posts="10" width="450"></fb:comments>


</body>
</html>



